<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Geçmiş Yoklamalar Button -->

    <Button
        android:id="@+id/button10"
        android:layout_width="365dp"
        android:layout_height="53dp"
        android:onClick="yoklamaBaslat"
        android:backgroundTint="#4CAF50"
        android:drawablePadding="8dp"
        android:elevation="4dp"
        android:padding="12dp"
        android:text="Yoklama Başlat"
        android:textColor="@android:color/white"
        app:cornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.116" />

    <Button
        android:id="@+id/button14"
        android:layout_width="365dp"
        android:layout_height="53dp"
        android:onClick="yoklamaBitir"
        android:backgroundTint="#F4B63838"
        android:drawablePadding="8dp"
        android:elevation="4dp"
        android:padding="12dp"

        android:text="Yoklamayı Sonlandır"
        android:textColor="@android:color/white"
        app:cornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.212" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kurucu İşlemleri"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.047" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Katılımcı İşlemleri"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6" />

    <Button
        android:id="@+id/button_past_attendances"
        android:layout_width="365dp"
        android:layout_height="53dp"
        android:backgroundTint="#4A85BD"
        android:drawablePadding="8dp"
        android:elevation="4dp"
        android:padding="12dp"
        android:text="Geçmiş Yoklama Listeleri"
        android:textColor="@android:color/white"
        app:cornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.309" />

    <Button
        android:id="@+id/YoklamaDurumum"
        android:layout_width="365dp"
        android:layout_height="53dp"
        android:backgroundTint="#4A85BD"
        android:drawablePadding="8dp"
        android:elevation="4dp"
        android:padding="12dp"
        android:text="Yoklama Durumu"
        android:textColor="@android:color/white"
        app:cornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.787" />

    <Button
        android:id="@+id/button_participate"
        android:layout_width="365dp"
        android:layout_height="53dp"
        android:backgroundTint="#4CAF50"
        android:drawablePadding="8dp"
        android:elevation="4dp"
        android:padding="12dp"
        android:onClick="yoklamayaKatil"
        android:text="Yoklamaya Katıl"
        android:textColor="@android:color/white"
        app:cornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.69" />
</androidx.constraintlayout.widget.ConstraintLayout>
