<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Gölge Katmanı -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="30dp" /> <!-- Yuvarlatılmış köşeler -->
            <solid android:color="#50000000" /> <!-- Yarı saydam siyah gölge -->
        </shape>
    </item>

    <!-- Buton Katmanı -->
    <item android:left="4dp" android:top="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="30dp" /> <!-- Yuvarlak köşeler -->
            <solid android:color="#6200EE" /> <!-- Buton rengi -->
        </shape>
    </item>
</layer-list>
